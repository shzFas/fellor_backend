generator client {
  provider = "prisma-client-js"
  output   = "../prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  nickname    String?
  avatar      String?
  role        String   @default("user")
  user_ip     String
  user_device String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
